@{
  Layout = "_Layout";
}

@using Factory.Models
@model Factory.Models.Engineer

<h2>@Html.DisplayFor(model => model.Name)</h2>
<hr />

<h3>Engineer Details</h3>

<h5>Status: @Html.DisplayFor(model => model.Status)</h5>

<p>@Html.ActionLink("Back to All Engineers", "Index")</p>
<p>@Html.ActionLink("Edit Engineer", "Edit", new { id = Model.EngineerId })</p>
<p>@Html.ActionLink("Delete Engineer", "Delete", new { id = Model.EngineerId })</p>


<h5>Current machines for engineer @Html.DisplayFor(model => model.Name)</h5>

@if (@Model.JoinEntities.Count == 0)
{
  <p>This engineer does not have any machines yet.</p>
}
else
{
  <h4>Machines the engineer has</h4>
  <ul>
  @foreach (var join in Model.JoinEntities)
    {
      <li>@Html.ActionLink($"{@join.Machine.Name}", "Details", "Machines", new {id = join.Machine.MachineId})</li>
    }
  </ul>
}