@{
  Layout = "_Layout";
}
@model Factory.Models.Engineer

<h4>Add a new engineer</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {@class = "form-control", type="text", required="required"})

  @Html.LabelFor(model => model.Status)
  @Html.TextBoxFor(model => model.Status , new {@class = "form-control", type="text", required="required"})

  <input type="submit" class="btn btn-success mt-5" value="Add new Engineer" />
}
<p>@Html.ActionLink("Show all engineers", "Index")</p>